<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Hello, world!</title>
</head>

<body>

    <div class="container">
        <h1>All comments</h1>
    </div>
    <div class="container d-flex justify-content-end">
        <a href="/gotoprofile" class="btn btn-warning ">Go to profile</a>
    </div>

    <%if(com.comment.length>0){%>
        <% com.comment.forEach(function(elem){%>
            <div class="container my-3">
                <div class="card">
                    <div class="card-header">
                        <%=elem%>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=elem.comments%>
                        </h5>
                        <a href="/comlikes/<%=elem._id%>" class="btn btn-primary">
                            <%= elem.comlikes.length%> Like
                        </a>
                        <a href="/deletecomment/<%=elem._id%>" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
            <%})%>
                <%}%>

                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                        crossorigin="anonymous"></script>

</body>

</html>